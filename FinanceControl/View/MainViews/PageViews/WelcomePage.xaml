<Page x:Class="FinanceControl.View.MainViews.PageViews.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinanceControl.View.MainViews.PageViews"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Title="WelcomePage">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource titleText}" Text="Добро пожаловать в приложение."/>
            <TextBlock Style="{StaticResource normalText}" Text="Для начала работы выберите нужный вам пункт в меню слева."/>
        </StackPanel>
    </Grid>
</Page>
