<UserControl x:Class="FinanceControl.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinanceControl.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">

    <Grid Margin="0 2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/FinanceControl;component/Resources/pass_box.png" Height="25" Margin="3 0 0 0"/>
        <PasswordBox x:Name="passboxPassword"  Style="{StaticResource textBox}" MaxLength="50"/>
    </Grid>
</UserControl>
